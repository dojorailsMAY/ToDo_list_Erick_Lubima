<style>
    <%# move to application.css OR tasks.scss %>
</style>
<h1><%= session[:username] %> ToDo list</h1>
<a href='/users/logout'>Logout</a><br><br>
<a href="/tasks/new">Add a New Task!</a><br><br>
<table>
    <thead>
        <tr>
            <td>Done?</td>
            <td>Task</td>
            <td>Due Date</td>
        </tr>
   </thead>
   <tbody> 
        <% @tasks.each do |task| %>
            <tr> 
                <td> <a href="/tasks/<%=task.id%>"><%=task.status%></a></td>
                <td><%=task.task%></td>
                <td><%=task.due_date%></td>
            </tr>
        <% end %>
   </tbody>      
</table>

<a href="/whatever" data-method="PUT">Restful Route Capable Link</a>
<form action="/whatever" method="POST">
    <input type="hidden" name="_method" value="PUT">
    Restful Route Capable Form
</form>
